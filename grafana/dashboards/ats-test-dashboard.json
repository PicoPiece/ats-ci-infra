{
  "dashboard": {
    "title": "ATS Test Results Dashboard",
    "tags": ["ats", "firmware", "testing"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Test Pass/Fail Rate (5m)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(ats_test_pass_total[5m])",
            "legendFormat": "Pass Rate",
            "refId": "A"
          },
          {
            "expr": "rate(ats_test_fail_total[5m])",
            "legendFormat": "Fail Rate",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "Total Tests Passed",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "ats_test_pass_total",
            "legendFormat": "Passed",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Total Tests Failed",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "ats_test_fail_total",
            "legendFormat": "Failed",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null}
              ]
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 4,
        "title": "Test Pass/Fail Trend",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "ats_test_pass_total",
            "legendFormat": "Passed",
            "refId": "A"
          },
          {
            "expr": "ats_test_fail_total",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Test Duration (seconds)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "ats_test_duration_seconds",
            "legendFormat": "Duration",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 2
          }
        }
      },
      {
        "id": 6,
        "title": "Test Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "(ats_test_pass_total / (ats_test_pass_total + ats_test_fail_total)) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Last Test Run",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "ats_test_last_run_timestamp",
            "legendFormat": "Last Run",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dateTimeFromNow"
          }
        }
      },
      {
        "id": 8,
        "title": "Test In Progress",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "ats_test_in_progress",
            "legendFormat": "In Progress",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1}
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {"text": "Idle", "color": "green"},
                  "1": {"text": "Running", "color": "yellow"}
                },
                "type": "value"
              }
            ]
          }
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {}
  }
}
